{
  "name": "pixel",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "yarn@1.22.22",
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "prettier": {
    "trailingComma": "all",
    "tabWidth": 2,
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "jsxSingleQuote": false,
    "jsxBracketSameLine": false,
    "bracketSpacing": true,
    "arrowParens": "always"
  }
}
